#!/usr/bin/env nextflow


params {
    modules {
        'r_analysis_1' {
            publish_dir         = "r_analysis/r_analysis_1/"
            script              = "${baseDir}/bin/test/test1.R"
        }
        'r_analysis_2' {
            publish_dir         = "r_analysis/r_analysis_2"
            script              = "${baseDir}/bin/test/test2.R"
        }
    }
}


process {
    withName: r_analysis_1 {
        container = 'alexthiery/10x-npb-seurat:latest'
    }
    withName: r_analysis_2 {
        container = 'alexthiery/10x-npb-seurat:latest'
    }
}


